<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/picture_barbara"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:src="@drawable/barbara"
        android:padding="@dimen/padding"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/text_barbara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/picture_barbara"
        android:layout_alignTop="@id/picture_barbara"
        android:text="@string/barbara_liskov"
        android:padding="@dimen/padding_text"
        android:lines="6"
        android:scrollbars = "vertical"
        />

    <ImageView
        android:id="@+id/picture_daphne"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:src="@drawable/daphne"
        android:layout_below="@+id/picture_barbara"
        android:padding="@dimen/padding"/>

    <TextView
        android:id="@+id/text_daphne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/picture_daphne"
        android:layout_alignTop="@id/picture_daphne"
        android:text="@string/daphne_koller"
        android:padding="@dimen/padding_text"
        android:lines="6"
        android:scrollbars = "vertical"/>

    <ImageView
        android:id="@+id/picture_grace"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:layout_below="@id/picture_daphne"
        android:padding="@dimen/padding"
        android:src="@drawable/grace"/>

    <TextView
        android:id="@+id/text_grace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/picture_grace"
        android:layout_alignTop="@id/picture_grace"
        android:text="@string/grace_hopper"
        android:padding="@dimen/padding_text"
        android:lines="6"
        android:scrollbars = "vertical"/>

</RelativeLayout>